@model AddOfficeInputModel
@{
    var citiesItems = Model.CitiesItems.Select(x => new SelectListItem(x.Value, x.Key));
    var sortingCentersItems = Model.SortingCentersItems?.Select(x => new SelectListItem(x.Value, x.Key));
}

<h1 class="text-center text-secondary mb-4">Създаване на нов офис</h1>


<div class="row">
    <form method="post" class="col-md-6 offset-md-3">
        <div class="form-group">
            <input asp-for="PostCode" class="form-control" />
            <span asp-validation-for="PostCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <select asp-for="OfficeType" asp-items="@Html.GetEnumSelectList<OfficeType>()" class="form-control">
            </select>
        </div>

        <div class="form-group">
            <select asp-for="CityId" asp-items="citiesItems" class="form-control">
            </select>
            <span asp-validation-for="CityId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <select asp-for="ResponsibleSortingCenter" asp-items="sortingCentersItems" class="form-control">
            </select>
            <span asp-validation-for="ResponsibleSortingCenter" class="text-danger"></span>
        </div>

            <input type="submit" class="btn btn-success col-md-8 offset-md-2" class="form-control" />
    </form>
</div>
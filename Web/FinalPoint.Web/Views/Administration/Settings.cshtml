@model SettingsInputModel
@{
    ViewData["Title"] = "Настройки";

    ViewData["Breadcrumb"] = new List<KeyValuePair<string, string>>() {
        new KeyValuePair<string, string>("Начало", "/"),
        new KeyValuePair<string, string>("Администрация", "/Administration"),
        };


    var allEmployees = Model.AvailableThemes?.Select(x => new SelectListItem(x.Value, x.Key));
}

<h1 class="text-center text-secondary mb-4">@ViewData["Title"]</h1>

<hr />
<h4 class="text-center">Избор на тема:</h4>

<div class="row">
    <form method="POST" class="m-auto">
        <div class="col-md-8 m-auto text-center">
            <div class="m-auto">
                <div class="form-group">
                    <label asp-for="SelectedThemeId"></label>
                    <select asp-for="SelectedThemeId" asp-items="allEmployees" data-live-search="true" class="selectpicker form-control">
                    </select>
                    <span asp-validation-for="SelectedThemeId" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-success col-md-8 mt-3">Запази</button>
        </div>
    </form>
</div>



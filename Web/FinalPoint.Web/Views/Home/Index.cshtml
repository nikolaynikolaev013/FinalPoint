@model IndexViewModel
@{ ViewData["Title"] = "Начало"; }

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center text-secondary mb-4">Добре дошли, @Model.FullName</h1>

            <div class="row offset-md-2">
                <div class="col-md-5">
                    <a asp-controller="AddDispose" asp-action="AddParcel">
                        <div class="card border-left-info shadow mb-3" style="width: 18rem;">
                            <div class="card-body">
                                <h4 class="card-title text-secondary">Приемане на пратка</h4>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-md-5">
                    <a asp-controller="AddDispose" asp-action="DisposeParcel">
                        <div class="card border-left-info shadow mb-3" style="width: 18rem;">
                            <div class="card-body">
                                <h4 class="card-title text-secondary">Издаване на пратка</h4>
                            </div>
                        </div>
                    </a>
                </div>
            </div>


            <div class="row offset-md-2">
                <div class="col-md-5">
                    <a asp-controller="Load">
                        <div class="card border-left-info shadow mb-3" style="width: 18rem;">
                            <div class="card-body">
                                <h4 class="card-title text-secondary">Товарене</h4>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-md-5">
                    <a asp-controller="Unload">
                        <div class="card border-left-info shadow mb-3" style="width: 18rem;">
                            <div class="card-body">
                                <h4 class="card-title text-secondary">Разтоварване</h4>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="row offset-md-2">
                <div class="col-md-5">
                    <a href="#">
                        <div class="card border-left-info shadow mb-3" style="width: 18rem;">
                            <div class="card-body">
                                <h4 class="card-title text-secondary">Групиране</h4>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-md-5">
                    <a href="#">
                        <div class="card border-left-info shadow mb-3" style="width: 18rem;">
                            <div class="card-body">
                                <h4 class="card-title text-secondary">Разгрупиране</h4>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="row offset-md-2">
                <div class="col-md-5">
                    <a href="#">
                        <div class="card border-left-info shadow mb-3" style="width: 18rem;">
                            <div class="card-body">
                                <h4 class="card-title text-secondary">Проверка на пратка</h4>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-md-5">
                    <a asp-controller="Administration">
                        <div class="card border-left-info shadow mb-3" style="width: 18rem;">
                            <div class="card-body">
                                <h4 class="card-title text-secondary">Администрация</h4>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>

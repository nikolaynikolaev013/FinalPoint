@model HashSet<ParcelDto>

<div class="row mt-3">
    <div class="col-md-12">
        <table class="table table-striped table-hover ">
            @foreach (var parcel in Model)
            {
                <tr class="@(parcel.Status == "Проверена" ? "table-success" : parcel.Status == "Добавена" ? "table-danger" : "") rounded">
                    <td>
                        <div class="row">
                            <div class="col-md-2">
                                Пратка №: @parcel.Id
                            </div>
                            <div class="col-md-3">
                                @parcel.Parts @(parcel.Parts == 1 ? "част" : "части")
                            </div>
                            <div class="col-md-5"></div>
                            <div class="col-md-2">
                                <i class="fas fa-@(parcel.Status == "Проверена" ? "check" : parcel.Status == "Добавена" ? "plus" : "")"></i>
                                @parcel.Status
                            </div>
                        </div>

                    </td>
                </tr>
            }
        </table>
    </div>
</div>
@model ParcelInsertPartialViewModel
    <div id="parcelInsert">
        <div class="row">
            <div class="col-md-12">
                <div class="input-group mb-3">
                    <input id="parcelIdInput" name="parcelIdInput" type="number" class="form-control border-right-0" placeholder="Моля въведете/сканирайте номер на пратка." aria-label="Моля въведете/сканирайте номер на пратка." aria-describedby="scan-input">

                    <span class="input-group-append bg-white border-left-0">
                        <span class="input-group-text bg-transparent">
                            <i class="fas fa-barcode fa-lg"></i>
                        </span>
                    </span>

                    <div class="input-group-append">
                        <button id="submitBtn" class="btn btn-secondary" type="button">@Model?.ButtonText</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-3 col-lg-7">
            <div class="form-group col-sm-3">
                <input name="addRemoveRadioBtns" id="check" class="btn btn-outline-secondary" type="radio" checked />
                <label for="check" class="mr-2">Добавяне</label>
            </div>
            <div class="form-group col-sm-3">
                <input name="addRemoveRadioBtns" id="remove" class="btn btn-outline-secondary" type="radio" />
                <label for="remove" class="mr-2">Премахване</label>
            </div>
        </div>
    </div>